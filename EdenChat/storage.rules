rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /chat-media/{conversationId}/{messageId}/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 25 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|application/pdf|text/.*');
    }
  }
}
